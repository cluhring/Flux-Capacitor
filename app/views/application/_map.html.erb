    waypoints: [
      L.latLng (39.749747, -104.999977),
      L.latLng (41.87, -87.63)
    ],
    routeWhileDragging: true,
    draggableWaypoints: true,
    geocoder: L.Control.Geocoder.nominatim()
}).addTo(map);

